@model IEnumerable<HastaneRandevuSau.Models.Randevu>

@{
    ViewData["Title"] = "IndexUserIngilizce";
}

<h1>Look Reserved Appointment </h1>


<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">
                TC ID Number
            </th>
            <th scope="col">
                Patient Name
            </th>
            
            <th scope="col">
                Patient SurName
            </th>
            
            <th scope="col">
                Contact Number
            </th>
            <th scope="col">
                Doctor
            </th>
            <th scope="col">
                Appointment Month
            </th>
            <th scope="col">
                Appointment Day
            </th>
            <th scope="col">
                Appointment Time
            </th>
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TcNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HastaAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HastaSoyAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IletisimNumarası)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doktor.DoktorAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RandevuAyi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RandevuGunu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RandevuSaati)
            </td>
            
        </tr>
}
    </tbody>
</table>
