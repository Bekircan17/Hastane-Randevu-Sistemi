@model HastaneRandevuSau.Models.Randevu

@{
    ViewData["Title"] = "CreateUserIngilizce";
}

<h1>Create Appoinment</h1>
<p>Please check the full appointment. If you choose full appointment. Your appointment is disabled.</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUserEnglish">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TcNo" class="control-label">TC Identification Number</label>
                <input asp-for="TcNo" class="form-control" />
                <span asp-validation-for="TcNo" class="text-danger">Not</span>
            </div>
            <div class="form-group">
                <label asp-for="HastaAdi" class="control-label">Patient Name</label>
                <input asp-for="HastaAdi" class="form-control" />
                <span asp-validation-for="HastaAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HastaSoyAdi" class="control-label">Patient SurName</label>
                <input asp-for="HastaSoyAdi" class="form-control" />
                <span asp-validation-for="HastaSoyAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IletisimNumarası" class="control-label">Contant Number</label>
                <input asp-for="IletisimNumarası" class="form-control" />
                <span asp-validation-for="IletisimNumarası" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoktorId" class="control-label">DoctorId</label>
                <select asp-for="DoktorId" class="form-control" asp-items="ViewBag.DoktorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RandevuAyi" class="control-label">Appointment Month<</label>
                <select asp-for="RandevuAyi" class="form-control">
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>

                <span asp-validation-for="RandevuAyi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RandevuGunu" class="control-label">Appointment Day</label>
                <select asp-for="RandevuGunu" class="form-control" id="RandevuGunuSelect">
                    @for (int i = 1; i <= 31; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="RandevuGunu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RandevuSaati" class="control-label">Appointment Time(TR)</label>
                <select asp-for="RandevuSaati" class="form-control">
                    <option value="10.00">10.00</option>
                    <option value="11.00">11.00</option>
                    <option value="13.00">13.00</option>
                    <option value="14.00">14.00</option>
                    <option value="15.00">15.00</option>
                    <option value="16.00">16.00</option>
                    <option value="17.00">17.00</option>
                </select>
                <span asp-validation-for="RandevuSaati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

