@model IEnumerable<HastaneRandevuSau.Models.Doktor>

@{
    ViewData["Title"] = "Index";
}

<h1>Doktor Listesi</h1>

<p>
    <a asp-action="Create">Yeni doktor oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoktorAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoktorSoyadi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.uzmanlikAlani)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoktorTelefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoktorAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoktorSoyadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.uzmanlikAlani)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoktorTelefon)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DoktorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DoktorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DoktorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
