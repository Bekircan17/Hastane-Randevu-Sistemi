@model HastaneRandevuSau.Models.Doktor

@{
    ViewData["Title"] = "Create";
}

<h1>Admin-Doktor oluştur</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoktorAdi" class="control-label"></label>
                <input asp-for="DoktorAdi" class="form-control" />
                <span asp-validation-for="DoktorAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoktorSoyadi" class="control-label"></label>
                <input asp-for="DoktorSoyadi" class="form-control" />
                <span asp-validation-for="DoktorSoyadi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="uzmanlikAlani" class="control-label"></label>
                <input asp-for="uzmanlikAlani" class="form-control" />
                <span asp-validation-for="uzmanlikAlani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoktorTelefon" class="control-label"></label>
                <input asp-for="DoktorTelefon" class="form-control" />
                <span asp-validation-for="DoktorTelefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Doktorlar listesine geri dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
