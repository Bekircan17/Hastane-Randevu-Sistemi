@model HastaneRandevuSau.Models.Iletisim

@{
    ViewData["Title"] = "Create";
}

<h1>Mesaj Oluşturun</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="RandevuNumarasi" class="control-label"></label>
                <input asp-for="RandevuNumarasi" class="form-control" />
                <span asp-validation-for="RandevuNumarasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mesaj" class="control-label"></label>
                <input asp-for="Mesaj" class="form-control" />
                <span asp-validation-for="Mesaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IletisimNumarasi" class="control-label"></label>
                <input asp-for="IletisimNumarasi" class="form-control" />
                <span asp-validation-for="IletisimNumarasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Ana sayfaya dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
