@model HastaneRandevuSau.Models.Iletisim

@{
    ViewData["Title"] = "CreateUserIngilizce";
}

<h1>Create Message</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUserIngilizce">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="RandevuNumarasi" class="control-label">
                    Appointment Number
                </label>
                <input asp-for="RandevuNumarasi" class="form-control" />
                <span asp-validation-for="RandevuNumarasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mesaj" class="control-label">Message</label>
                <input asp-for="Mesaj" class="form-control" />
                <span asp-validation-for="Mesaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IletisimNumarasi" class="control-label">
                    Contact Number
                </label>
                <input asp-for="IletisimNumarasi" class="form-control" />
                <span asp-validation-for="IletisimNumarasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Go to home page</a>
</div>

